{
  "AllowedHosts": "*",
  "Logging": {
    "LogLevel": {
      "Default": "Trace"
    }
  },
  "AppConfig": {
    "AuthTokenSecrect": "GfWZAv1LOLSFQJrYeukn9u2qqkw2M6Jq",
    "AuthTokenExpireSeconds": 120,
    "AllowedOrigins": [
      "http://localhost:4200"
    ],
    "ValidateIssuer": false,
    "ValidIssuers": [
      "http://localhost:4200"
    ],
    "ValidateAudience": false,
    "ValidAudiences": [
      "http://localhost:4200"
    ]
  },
  "NLog": {
    "autoReload": true,
    "extensions": [
      {
        "NLog.Web.AspNetCore": {
          "assembly": "NLog.Web.AspNetCore"
        }
      }
    ],
    "targets": {
      "allLogs": {
        "target": {
          "type": "File",
          "fileName": "C:\\Traces\\GTM\\${shortdate}.log",
          "layout": "${level}|${time}|Id=${mdlc:item=requestId} | ${logger}: ${message} ${exception:format=tostring}"
        },
        "type": "AsyncWrapper"
      }
    },
    "rules": [
      {
        "logger": "Gtm.*",
        "minLevel": "Trace",
        "writeTo": "allLogs"
      },
      {
        "logger": "Microsoft.AspNetCore.Hosting.Diagnostics",
        "minLevel": "Debug",
        "writeTo": "allLogs"
      }
    ]
  }
}
